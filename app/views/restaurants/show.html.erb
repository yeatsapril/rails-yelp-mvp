<div class="container border border-primary p-4"><h2><%= @restaurant.name %></h2></div>
<div class="container border-bottom border-primary mt-4"><p><%= @restaurant.address %></p></div>
<div class="container border-bottom border-primary mt-4"><p>Tel: <%= @restaurant.phone_number %></p></div>
<div class="container border-bottom border-primary mt-4"><p><%= @restaurant.category %></p></div>

<div class="container d-flex justify-content-between mt-4">
  <div class="btn btn-outline-dark"><%= link_to 'Edit restaurant', edit_restaurant_path(@restaurant)%></div>
  <div class="btn btn-outline-dark"><%= link_to 'Delete this restaurant', restaurant_path(@restaurant), method: :delete, data: { confirm: "Are you sure?" }%></div>
  <div class="btn btn-outline-dark"><%= link_to 'Back to restaurants', restaurants_path %></div>
</div>
